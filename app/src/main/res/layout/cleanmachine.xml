<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="600dp"
    app:cardBackgroundColor="@color/GreenYellow"
    app:cardCornerRadius="30dp"
    app:cardElevation="3dp"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35sp"
            android:layout_marginRight="50dp"
            android:background="@color/Green"
            android:fontFamily="@font/andika"
            android:text="TO DELIVERY CHAMBER"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@color/Green"

            android:fontFamily="@font/andika"
            android:text="TO MANIFOLD"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn3"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"

            android:background="@color/Green"
            android:fontFamily="@font/andika"
            android:text="VALVEL1 ON/OFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@color/Green"

            android:fontFamily="@font/andika"
            android:text="VALVEL2 ON/OFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:background="@color/Green"
            android:fontFamily="@font/andika"
            android:text="VALVEL3 ON/OFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"

            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@color/Green"
            android:fontFamily="@font/andika"
            android:text="VALVEL4 ON/OFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"

            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />





        <TextView
            android:id="@+id/tvClose"
            android:layout_width="match_parent"
            android:text="Close"
            android:textColor="@color/black"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"
            android:textStyle="bold"

            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>





