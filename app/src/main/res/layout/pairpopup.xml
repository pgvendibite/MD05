<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="480dp"
    app:cardBackgroundColor="@color/GreenYellow"
    app:cardCornerRadius="30dp"
    app:cardElevation="3dp"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- <ImageView
             android:layout_width="150dp"
             android:layout_height="90dp"
             android:id="@+id/logo"
             android:layout_centerHorizontal="true"
             android:background="@drawable/companylogo"/>-->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/purofresh_logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Paired Devices Found"
            android:textSize="40dp"
            android:id="@+id/sucess"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bell_mt"
            />


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:background="@color/Green"
            android:layout_below="@+id/sucess"
            android:layout_marginRight="50dp"
            android:id="@+id/pair"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Pair"
            android:layout_marginBottom="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:fontFamily="@font/andika"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
